<!DOCTYPE html>




<head>
    <!-- <meta charset="utf-8">
        <meta http-equiv="X-UA-Compatible" content="IE=edge"> -->
    <title></title>
    <!-- <meta name="description" content="">
        <meta name="viewport" content="width=device-width, initial-scale=1"> -->
    <link href="https://fonts.googleapis.com/css?family=Open+Sans&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="css\uikit.min.css" />
    <link rel="stylesheet" href="css\stylesheet.css" />
</head>




<body>

    <div class="content" uk-grid>

        <!-- ========================Left side main menu ======================== -->
        <div id="width-left" class="uk-width-2-3@m">
            <div id="main-card" class="uk-card uk-card-default uk-card-body">


                <!-- ======================== Top level menu ======================== -->
                <div id="top-level-menu" uk-switcher="animation: uk-animation-fade; toggle: > *">
                    <button id="top-level-left" class="uk-button uk-button-default uk-text-nowrap" type="button">1.
                        Choose
                        Apparel</button>
                    <button class="uk-button uk-button-default uk-text-nowrap" type="button">2. Add
                        Customization</button>
                    <button id="top-level-right" class="uk-button uk-button-default uk-text-nowrap" type="button">3.
                        Order
                        Details</button>
                </div>
                <ul class="uk-switcher uk-margin">


                    <!-- ======================== 1. Garment Choices ======================== -->
                    <li>

                        <!-- ======================== Garment Menu ======================== -->
                        <ul class="uk-child-width-expand second-level-menu" uk-tab>
                            <li id="clothing-menu-left"><a href="#">Tees and Tanks</a></li>
                            <li><a href="#">Sweaters and Sleeves</a></li>
                            <li><a href="#">Pants and Shorts</a></li>
                            <li id="clothing-menu-right"><a href="#">Accessories and Hats &nbsp;&nbsp;&nbsp;</a></li>
                        </ul>


                        <ul class="uk-switcher">
                            <li id="tees-menu" class="clothing-items">
                                <div class="uk-child-width-1-3@s uk-text-center" uk-grid>

                                    <!-- TODO: Make one big loop with cases/ifs -->
                                    <% allRecords.forEach(function(record){ %>
                                    <% if((record.get('Default?')==true) && (record.get('Product Category')=="Tees and Tanks")){%>
                                    <div class="clothing-option" value= <%=record.id%>>
                                        <div class="uk-card uk-card-default uk-card-hover uk-card-body">
                                            <img src="imgs\tee.jpg">
                                            <h6 class="name"> <%= record.get('Name') %> </h6>
                                            <p class="colors"><%= record.get('Count') %>+ Colors... </p>
                                            <p class="price">Starts at $<%= record.get('Starting Price') %>.00</p>
                                        </div>
                                    </div>
                                    <%}%>
                                   <%})%>

                                </div>
                                <div class="clothing-menu-bottom-space"></div>
                            </li>

                            <li id="sweaters-menu" class="clothing-items">
                                <div class="uk-child-width-1-3@s uk-text-center" uk-grid>
                                    <% allRecords.forEach(function(record){ %>
                                    <% if((record.get('Default?')==true) && (record.get('Product Category')=="Sweaters and Sleeves")){%>
                                    <div class="clothing-option" value=<%=record.id%>>
                                        <div class="uk-card uk-card-default uk-card-hover uk-card-body">
                                            <img src="imgs\tee.jpg">
                                            <h6 class="name"> <%= record.get('Name') %> </h6>
                                            <p class="colors"><%= record.get('Count') %>+ Colors... </p>
                                            <p class="price">Starts at $<%= record.get('AMS Price Small') %>.00</p>
                                        </div>
                                    </div>
                                    <%}%>
                                   <%})%>
                                </div>
                                <div class="clothing-menu-bottom-space"></div>


                            </li>

                            <li id="pants-menu" class="clothing-items">
                                <div class="uk-child-width-1-3@s uk-text-center" uk-grid>
                                    <% allRecords.forEach(function(record){ %>
                                    <% if((record.get('Default?')==true) && (record.get('Product Category')=="Pants and Shorts")){%>
                                    <div class="clothing-option" value=<%=record.id%>>
                                        <div class="uk-card uk-card-default uk-card-hover uk-card-body">
                                            <img src="imgs\tee.jpg">
                                            <h6 class="name"> <%= record.get('Name') %> </h6>
                                            <p class="colors"><%= record.get('Count') %>+ Colors... </p>
                                            <p class="price">Starts at $<%= record.get('AMS Price Small') %>.00</p>
                                        </div>
                                    </div>
                                    <%}%>
                                   <%})%>
                                </div>
                                <div class="clothing-menu-bottom-space"></div>
                            </li>

                            <li id="accessories-menu" class="clothing-items">
                                <div class="uk-child-width-1-3@s uk-text-center" uk-grid>
                                    <% allRecords.forEach(function(record){ %>
                                    <% if((record.get('Default?')==true) && (record.get('Product Category')=="Accessories and Hats")){%>
                                    <div class="clothing-option" value=<%=record.id%>>
                                        <div class="uk-card uk-card-default uk-card-hover uk-card-body">
                                            <img src="imgs\tee.jpg">
                                            <h6 class="name"> <%= record.get('Name') %> </h6>
                                            <p class="colors"><%= record.get('Count') %>+ Colors... </p>
                                            <p class="price">Starts at $<%= record.get('AMS Price Small') %>.00</p>
                                        </div>
                                    </div>
                                    <%}%>
                                   <%})%>
                                </div>
                                <div class="clothing-menu-bottom-space"></div>
                            </li>
                        </ul>

                    </li>


                    <!-- ======================== 2. Customization ======================== -->
                    <li id="customization-items">
                        <div id="custom-color">
                            <h4>Select Clothing Color</h4>
                            <span class="dot"></span>
                            <span class="dot"></span>
                            <span class="dot"></span>
                            <span class="dot"></span>
                            <% allColors.forEach(function(record){ %>
                            <span class="dot" title= <%= record.get("Name");%> style="background-color:<%= record.get("Hex");%>" id= <%= record.id ;%> hidden></span>
                            <% }); %>

                            <hr>
                        </div>
                        <div id="custom-upload-logo">
                            <h4>Add Logo</h4>
                            <p>Upload a high quality PNG image of your custom logo</p>
                            <div class="js-upload" uk-form-custom>
                                <input type="file" accept="image/png" id="logo-upload">
                                <button class="uk-button uk-button-default" type="button" tabindex="-1">Select</button>
                            </div>
                            <hr>
                        </div>
                        <div id="custom-logo-print">

                        </div>
                        <div id="custom-logo-position">
                            <h4>Logo Position</h4>
                            <p>Select from the avaliable locations where you would like your logo printed.</p>
                            <span uk-icon="icon: chevron-left; ratio: 1.5"></span>
                            <img src="imgs/p1.png">
                            <img src="imgs/p2.png">
                            <img src="imgs/p3.png">
                            <span uk-icon="icon: chevron-right; ratio: 1.5"></span>
                            <hr>
                        </div>
                        <div id="custom-logo-print">
                            <h4>Screen Print or Stitching</h4>
                            <div class="uk-column-1-2 uk-column-divider">
                                <p>Screen Print is recommended for logos with many colors. Cost is calculated through %
                                    of your image that is not transparent.</p>
                                <p>Stitching is recommended for logos with less colors. Cost is calculated through the
                                    number of colors detected in your logo.</p>

                            </div>
                            <div class="uk-column-1-2 uk-column-divider">
                                <h1 class="uk-text-danger uk-text-large">0%</h1>
                                <h1 class="uk-text-danger uk-text-large">3 Colors</h1>
                            </div>


                            <hr>
                        </div>
                        <div id="custom-list-upload">
                            <h4>Custom Text</h4>
                            <p>Upload a csv or excel file. <a href="">Click here</a> to download template.</p>
                            <div class="js-upload" uk-form-custom>
                                <input type="file" multiple>
                                <button class="uk-button uk-button-default" type="button" tabindex="-1">Select</button>
                            </div>
                            <hr>
                        </div>
                        <div id="custom-list-options">
                            <h4>Logo Position</h4>
                            <p>Select from the avaliable locations where you would like your logo printed.</p>
                            <span uk-icon="icon: chevron-left; ratio: 1.5"></span>
                            <img src="imgs/p1.png">
                            <img src="imgs/p2.png">
                            <img src="imgs/p3.png">
                            <span uk-icon="icon: chevron-right; ratio: 1.5"></span>
                            <hr>
                        </div>

                        <div class="scroll-bottom-space"></div>
                    </li>


                    <!-- ======================== 3. Info input form ======================== -->
                    <li id="order-details">


                        <div id="contact-details">
                            <h4>Contact Details</h4>
                            <p>Please fill out the contact detials below</p>
                            

                            <form class="uk-form-horizontal uk-margin-large">
                            <div class="uk-margin">
                                <label class="uk-form-label" for="full-name">Full Name</label>
                                <div class="uk-form-controls">
                                    <input class="uk-input" id="full-name" type="text" placeholder="John Doe">
                                </div>
                            </div>

                            <div class="uk-margin">
                                <label class="uk-form-label" for="email">Email Address</label>
                                <div class="uk-form-controls">
                                    <input class="uk-input" id="email" type="email" placeholder="@queensu.ca">
                                </div>
                            </div>

                            <div class="uk-margin">
                                <label class="uk-form-label" for="phone">Phone Number</label>
                                <div class="uk-form-controls">
                                    <input class="uk-input" id="phone" type="email" placeholder="999-999-9999">
                                </div>
                            </div>

                            <div class="uk-margin">
                                <label class="uk-form-label" for="ratified">Ratified Under</label>
                                <div class="uk-form-controls">
                                    <select class="uk-select" id="ratified">
                                        <option></option>
                                        <option>COMSOC</option>
                                        <option>AMS</option>
                                    </select>
                                </div>
                            </div>
                            </form>

                        <hr>

                    </div>


                    <div id="size-details">
                            <h4>Order Details</h4>
                            <p>Please review and complete the order details below</p>
                            

                        <form class="uk-grid-small" uk-grid>
                            <div class="uk-width-1-4@s">
                                <label class="uk-form-label" for="xsmall">Extra Small</label>
                                <input class="uk-input" type="number" placeholder="0" id="xsmall">
                            </div>
                            <div class="uk-width-1-4@s">
                                <label class="uk-form-label" for="small">Small</label>
                                <input class="uk-input" type="number" placeholder="0" id="small">
                            </div>
                            <div class="uk-width-1-4@s">
                                <label class="uk-form-label" for="medium">Medium</label>
                                <input class="uk-input" type="number" placeholder="0" id="large">
                            </div>
                            <div class="uk-width-1-4@s">
                                <label class="uk-form-label" for="large">Large</label>
                                <input class="uk-input" type="number" placeholder="0" id="large">
                            </div>
                            <div class="uk-width-1-4@s">
                                <label class="uk-form-label" for="xlarge">Extra large</label>
                                <input class="uk-input" type="number" placeholder="0" id="xlarge">
                            </div>
                            <div class="uk-width-1-4@s">
                                <label class="uk-form-label" for="2xlarge">2 Extra Large</label>
                                <input class="uk-input" type="number" placeholder="0" id="2xlarge">
                            </div>
                            <div class="uk-width-1-4@s">
                                <label class="uk-form-label" for="3-5xlarge">3-5 Extra Large</label>
                                <input class="uk-input" type="number" placeholder="0" id="3-5xlarge">
                            </div>
                            <div class="uk-width-1-4@s">
                                <label class="uk-form-label" for="onesize">One Size Fits All</label>
                                <input class="uk-input" type="number" placeholder="0" id="onesize">
                            </div>
                        </form>

                    </div>
                    <div class="scroll-bottom-space"></div>
                    </li>
                </ul>





            </div>
        </div>




        <div id="width-right" class="uk-width-1-3@m">

            <div id="clothing-card" class="uk-card uk-card-default uk-card-body">
                
                <div id="live-coming-soon">
                    <h2>Live preview is coming soon!</h2>
                </div>
                <img src="imgs\tee.jpg">
                
            </div>
            <div id="color-options">
                <span uk-icon="icon: chevron-left; ratio: 1.5"></span>
                <span uk-icon="icon: chevron-right; ratio: 1.5"></span>
            </div>
        </div>
    </div>

    <div id="submit-footer" class="uk-card uk-card-default">
        <div id="right-submit">
            <button class="uk-button uk-button-default" >Submit Order</button>
            </div>
    </div>








    <!-- UIkit JS -->
    <script src="js\uikit.min.js"></script>
    <script src="js\uikit-icons.min.js"></script>
    <script src="https://code.jquery.com/jquery-3.4.1.min.js"
        integrity="sha256-CSXorXvZcTkaix6Yvo6HppcZGetbYMGWSFlBw8HfCJo=" crossorigin="anonymous"></script>
    <script src="js\eventHandlers.js"></script>
</body>

</html>